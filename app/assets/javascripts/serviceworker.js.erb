function onInstall(event) {
   event.waitUntil(
     caches.open('activebridge-v1').then(function prefill(cache) {
       return cache.addAll([
         '<%= asset_path "mobile.js" %>',
         '<%= asset_path "mobile.css" %>',
         '<%= asset_path "fonts.css" %>',
         '<%= asset_path "index.html.erb" %>',
         'icon-2x.png',
         'icon-3x.png',
         'icon-4x.png',
       ]);
     })
   );
}


function onFetch(e) {
  e.respondWith(
    caches.match(e.request).then(function(response) {
      return response || fetch(e.request);
    }).catch(function() {
      return caches.match('<%= asset_path "index.html.erb" %>');
    })
  );
}

self.addEventListener('install', onInstall);
self.addEventListener('fetch', onFetch);

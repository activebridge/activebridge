= content_for :head do
  title= t('meta.pages./.title')
  meta name="description" content= t('meta.pages./.description')
  meta name='theme-color' content='#433B43'
  = render 'layouts/critical_css'

doctype 5
html lang='en'
  = render 'layouts/head', type: :mobile, media: :all
  body
    = inline_svg 'mobile/pattern.svg', class: :bg, id: :bg
    main#pages= yield
    nav#nav
      a title='home' class='active' href='#home'= inline_svg('mobile/icons/menu-home.svg')
      a title='about' href='#about'= inline_svg('mobile/icons/menu-about.svg')
      a title='services' href='#services'= inline_svg('mobile/icons/menu-services.svg')
      a title='testimonials' href='#testimonials'= inline_svg('mobile/icons/menu-testimonials.svg')
      a title='contact' href='#contact'= inline_svg('mobile/icons/menu-contacts.svg')
    = javascript_include_tag :mobile, async: true
    = stylesheet_link_tag :mobile, media: :all
